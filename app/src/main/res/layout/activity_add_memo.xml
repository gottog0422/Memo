<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMemoActivity">

    <RelativeLayout
        android:id="@+id/rl_addmemo_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_b1">


        <ImageView
            android:id="@+id/bt_addmemo_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_no_star" />

        <ImageView
            android:id="@+id/bt_addmemo_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_check" />


    </RelativeLayout>


    <EditText
        android:id="@+id/et_addmemo_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rl_addmemo_tab"
        android:background="#e7e7e7"
        android:gravity="center_vertical"
        android:hint="@string/input_title"
        android:inputType="text"
        android:lines="1"
        android:paddingHorizontal="10dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_addmemo_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/et_addmemo_title"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:gravity="start"
        android:hint="@string/input_content"
        android:paddingHorizontal="10dp"
        android:textSize="20dp" />

</RelativeLayout>